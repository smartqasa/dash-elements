{
    "compilerOptions": {
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "isolatedModules": true,
        "module": "esnext",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "resolveJsonModule": true,
        "strict": true,
        "target": "esnext",
        "types": ["node"],
        "useDefineForClassFields": false
    },
    "include": ["src/**/*.ts", "custom.d.ts"],
    "exclude": ["node_modules"]
}

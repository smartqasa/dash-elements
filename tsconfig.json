{
  "compilerOptions": {
    "isolatedModules": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "useDefineForClassFields": false
  },
  "include": ["src/**/*.ts", "custom.d.ts"],
  "exclude": ["node_modules"]
}

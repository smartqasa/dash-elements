{
    "compilerOptions": {
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "isolatedModules": true,
        "lib": ["esnext", "dom"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "resolveJsonModule": true,
        "strict": true,
        "target": "esnext",
        "types": ["node"],
        "useDefineForClassFields": false
    },
    "include": [
        "src/**/*.ts",
        "global.d.ts",
        "archive/has-changed.ts",
        "archive/popup-confirmation.ts",
        "archive/popup-dialog.ts"
    ],
    "exclude": ["node_modules", "archive"]
}
